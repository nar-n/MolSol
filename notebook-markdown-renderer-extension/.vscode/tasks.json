{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "detail": "Compiles the TypeScript files."
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "tsc -w",
            "group": "build",
            "problemMatcher": ["$tsc"],
            "detail": "Watches for changes in TypeScript files and compiles them."
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "eslint .",
            "group": "test",
            "problemMatcher": ["$eslint"],
            "detail": "Runs ESLint to check for code quality issues."
        }
    ]
}